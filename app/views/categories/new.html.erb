<h1 class="text-center mt-4">Create a new category</h1>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/form_error', obj: @category %>
      <%= form_with model: @category, local: true, class: "shadow p-3 mb-3 bg-info rounded", data: { turbo: false} do |f| %>
        <div class="form-group row mb-3">
          <%= f.label :name, "Category name", class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name" %>
          </div>
        </div>
        <div class="form-group row justify-content-center">
          <%= f.submit class: "col-2 btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
      </div>
  </div>
  <%= link_to "[ Cancel and return back to users ]", users_path, class: "row justify-content-center text-info" %>
</div>

