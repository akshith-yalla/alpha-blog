<h1 class="text-center mt-4">Login for Alpha Blog</h1>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with scope: :session, local: true, url: login_path, class: "shadow p-3 mb-3 bg-info rounded", data: { turbo: false} do |f| %>
        <div class="form-group row mb-3">
          <%= f.label :email, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address" %>
          </div>
        </div>
        <div class="form-group row mb-3">
          <%= f.label :password,  class: "col-2 col-form-label text-light"  %>
          <div class="col-10">
            <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Enter your password"  %>
          </div>
        </div>
        <div class="form-group row justify-content-center">
          <%= f.submit "Log in", class: "col-2 btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
      </div>
  </div>
  <%= link_to "[ Cancel and return back to articles ]", articles_path, class: "row justify-content-center text-info" %>
</div>

