<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/form_error', obj: @article %>
      <%= form_with model: @article, local: true, class: "shadow p-3 mb-3 bg-info rounded", data: { turbo: false} do |f| %>
        <div class="form-group row mb-3">
          <%= f.label :title, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
          </div>
        </div>
        <div class="form-group row mb-3">
          <%= f.label :description,  class: "col-2 col-form-label text-light"  %>
          <div class="col-10">
            <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of article"  %>
          </div>
        </div>
        <div class="form-group row mb-3">
          <%= f.label :category,  class: "col-2 col-form-label text-light"  %>
          <div class="col-10">
            <%= f.collection_select(:category_ids, Category.all, :id, :name, {prompt: "Select categories from below"}, { multiple: true, size: 3, class: "form-select shadow rounded" } ) %>
          </div>
        </div>
        <div class="form-group row justify-content-center">
          <%= f.submit class: "col-2 btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
      </div>
  </div>
</div>
